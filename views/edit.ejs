<%- include("partials/header-feed"); -%>
<!-- section get in touch start -->
<div class="touch_section" id="contact">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="get_taital">
          <strong><span style="color: rgb(0, 0, 0)">EDIT</span> DETAILS</strong>
        </h1>
      </div>
    </div>
    <!--Hello this is comment-->
    <div class="email_box">
      <div class="input_main">
        <div class="container">
          <form action="/edit/<%= post._id %> " method="POST">
            <div class="form-group">
              <input
                type="text"
                class="email-bt"
                placeholder="Title"
                name="title"
                value="<%= post.title %> "
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                class="email-bt"
                placeholder="Your Phone Number"
                name="phone"
                value="<%= post.phone %> "
              />
            </div>
            <select
              class="form-select form-select-lg"
              name="selectPickerRequirement"
            >
              <option selected>Requirement</option>
              <option value="food">Food</option>
              <option value="adoption">Adoption</option>
              <option value="medication">Medication</option>
            </select>
            <div class="form-group">
              <textarea
                style="margin-top: 30px"
                class="location-bt"
                placeholder="Area Location"
                id="location"
                name="area"
              >
<%= post.area %></textarea
              >
            </div>

            <div class="form-group">
              <textarea
                style="margin-top: 10px"
                class="massage-bt"
                placeholder="Content"
                rows="5"
                id="content"
                name="content"
              >
<%= post.content %></textarea
              >
            </div>
            <button style="color: white" type="submit" class="btn btn-primary">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- section get in touch end -->
<%- include("partials/footer"); -%>
